<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/gray"
    app:cardCornerRadius="@dimen/normal_32dp"
    android:layout_margin="@dimen/small_16dp"
    app:cardMaxElevation="@dimen/small_12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_hanna_art"
            android:layout_width="@dimen/large_110dp"
            android:layout_height="@dimen/large_110dp"
            android:padding="@dimen/small_8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hanna"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedSquare" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_20dp"
            android:layout_marginTop="@dimen/small_10dp"
            android:layout_toEndOf="@id/img_hanna_art"
            android:fontFamily="sans-serif"
            android:text="@string/txt_11_dec"
            android:textColor="@color/lite_gray"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_hanna_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_date"
            android:layout_marginStart="@dimen/small_24dp"
            android:layout_marginTop="@dimen/small_20dp"
            android:layout_toEndOf="@id/img_hanna_art"
            android:fontFamily="@font/belgrano"
            android:text="@string/txt_hanna_art"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_hanna_art"
            android:layout_marginStart="@dimen/text_size_24sp"
            android:layout_marginTop="@dimen/small_8dp"
            android:layout_toEndOf="@id/img_hanna_art"
            android:text="@string/txt_martin_collection"
            android:textColor="#aeaeae"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/small_10dp"
            android:layout_marginEnd="@dimen/small_10dp"
            android:layout_marginBottom="@dimen/small_10dp"
            android:background="@drawable/bg_rounded_yellow"
            android:paddingHorizontal="@dimen/small_8dp"
            android:paddingVertical="@dimen/small_4dp"
            android:textSize="@dimen/text_size_20sp"
            android:text="@string/txt_12_032_eth"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>