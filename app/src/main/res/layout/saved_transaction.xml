<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UiScreen">

        <include
            android:id="@+id/search_bar"
            layout="@layout/search" />

        <TextView
            android:id="@+id/txt_recent_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_bar"
            android:layout_marginStart="@dimen/normal_32dp"
            android:layout_marginTop="@dimen/small_28dp"
            android:text="@string/txt_recent_activity"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_270dp"
            android:layout_below="@id/txt_recent_activity"
            android:layout_marginTop="@dimen/small_16dp"
            tools:listitem="@layout/recent_item_view" />

        <TextView
            android:id="@+id/saved_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_view"
            android:layout_marginStart="@dimen/normal_32dp"
            android:layout_marginTop="@dimen/small_28dp"
            android:text="@string/txt_saved_transaction"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_view"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/small_4dp"
            android:layout_marginEnd="@dimen/normal_32dp"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_40sp"
            android:textStyle="bold" />

        <include
            layout="@layout/card_view_transaction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/saved_transaction" />

        <include layout="@layout/card_view_transaction" />

    </RelativeLayout>

</ScrollView>
